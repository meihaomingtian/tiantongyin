<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/headerpagebg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btuback"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/label7"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_title_s" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/about_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/corner_round_top"
            android:onClick="onClick"
            android:text="在线交易"
            android:textColor="@color/orange"
            android:textSize="22sp" />

        <Button
            android:id="@+id/about_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="1px"
            android:background="@drawable/corner_shape"
            android:onClick="onClick"
            android:text="客服帮助"
            android:textColor="@color/orange"
            android:textSize="22sp" />

        <Button
            android:id="@+id/about_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="1px"
            android:background="@drawable/corner_shape"
            android:onClick="onClick"
            android:text="技术支持"
            android:textColor="@color/orange"
            android:textSize="22sp" />

        <Button
            android:id="@+id/about_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="1px"
            android:background="@drawable/corner_shape"
            android:onClick="onClick"
            android:text="意见反馈"
            android:textColor="@color/orange"
            android:textSize="22sp" />

        <Button
            android:id="@+id/about_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="1px"
            android:background="@drawable/corner_round_bottom"
            android:onClick="onClick"
            android:text="版本更新"
            android:textColor="@color/orange"
            android:textSize="22sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:gravity="bottom|center_horizontal"
        android:onClick="onClick"
        android:textSize="20sp" />

</LinearLayout>