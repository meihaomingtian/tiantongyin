<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/headerpagebg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/yemei" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_marginTop="30dip"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/goldmkbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/icongoldmarket" />

                <ImageButton
                    android:id="@+id/globalbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/iconglobalmarket" />

                <ImageButton
                    android:id="@+id/newsbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/newnew" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row1label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row1"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/label1"
                    android:textColor="@color/black"
                    android:textSize="15dp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/label2"
                    android:textColor="@color/black"
                    android:textSize="15dp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="4dp"
                    android:text="@string/label3"
                    android:textColor="@color/black"
                    android:textSize="15dp" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row1label"
                android:layout_centerInParent="false"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_marginTop="25dip"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/mychoicebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/iconmychoice" />

                <ImageButton
                    android:id="@+id/tradingstrategybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icontradingstrategy" />

                <ImageButton
                    android:id="@+id/onlinetradingbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/iconcalendar" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row2label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row2"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/label4"
                    android:textColor="@color/black"
                    android:textSize="15dp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/label5"
                    android:textColor="@color/black"
                    android:textSize="15dp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="实时解盘"
                    android:textColor="@color/black"
                    android:textSize="15dp" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row2label"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_marginTop="25dip"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/customerservicebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/iconcustomerservice" />

                <ImageButton
                    android:id="@+id/sethelpbtn"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/iconsethelp_2" />

                <ImageButton
                    android:id="@+id/exitsoftbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/newgoldanalyst" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row3label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/row3"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/row3"
                android:layout_marginBottom="30dip"
                android:layout_marginRight="30dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/label7"
                    android:textColor="@color/black"
                    android:textSize="15dp" >
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" 
                    android:layout_alignParentLeft="true"
                    >
                    <TextView
                        android:layout_marginLeft="-8dp"
                        android:id="@+id/home_tv_07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=" 顺然"
                        android:textColor="@color/black"
                        android:textSize="15dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/home_tv_08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 金融研究所"
                        android:layout_marginLeft="-8dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" 
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="华尔街 "
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="3dp"
                        android:textSize="15dp" >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" BKM交易系统"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:textSize="15dp" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>